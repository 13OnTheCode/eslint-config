{
  "name": "@13onthecode/eslint-config-react",
  "description": "ESLint shareable config for React",
  "version": "1.1.4",
  "type": "module",
  "license": "MIT",
  "homepage": "https://github.com/13OnTheCode/eslint-config/tree/main/packages/react#readme",
  "bugs": "https://github.com/13OnTheCode/eslint-config/issues",
  "author": {
    "name": "13OnTheCode",
    "email": "13@ryongyon.com",
    "url": "https://ryongyon.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/13OnTheCode/eslint-config.git",
    "directory": "packages/react"
  },
  "keywords": [
    "eslint",
    "eslint-config",
    "react"
  ],
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "build": "unbuild",
    "clean": "pnpm dlx rimraf node_modules dist"
  },
  "dependencies": {
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-react": "^7.33.1",
    "eslint-plugin-react-hooks": "^4.6.0"
  },
  "peerDependencies": {
    "eslint": ">=8.23.0"
  },
  "peerDependenciesMeta": {
    "eslint": {
      "optional": true
    }
  },
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "files": [
    "dist",
    "LICENSE.md",
    "CHANGELOG.md",
    "README.md",
    "README.CN.md"
  ],
  "unbuild": {
    "rollup": {
      "esbuild": {
        "minify": true
      }
    }
  }
}
